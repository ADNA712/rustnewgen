  <script>
    let countdownInterval;

    function showCountdown() {
      const countdownDiv = document.getElementById("countdown");
      
      if (countdownInterval) {
        clearInterval(countdownInterval);
        countdownDiv.innerHTML = "";
        countdownInterval = null;
        return;
      }

      function updateCountdown() {
        const targetDate = new Date("2025-06-26T00:00:00");
        const now = new Date();
        const diff = targetDate - now;

        if (diff <= 0) {
          countdownDiv.innerHTML = "ğŸ‰ RUST NEW GEN IS LIVE! ğŸ‰";
          clearInterval(countdownInterval);
          return;
        }

        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
        const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
        const minutes = Math.floor((diff / 1000 / 60) % 60);
        const seconds = Math.floor((diff / 1000) % 60);

        countdownDiv.innerHTML = â³ ${days}d ${hours}h ${minutes}m ${seconds}s;
      }

      updateCountdown();
      countdownInterval = setInterval(updateCountdown, 1000);
    }

    function toggleNews() {
      const news = document.getElementById("news");
      if (news.style.display === "none" || news.style.display === "") {
        news.style.display = "block";
      } else {
        news.style.display = "none";
      }
    }

    function checkServers() {
      alert("ğŸ” Checking server status...\n\nğŸŒ EU: Online (245ms)\nğŸ‡ºğŸ‡¸ US: Online (180ms)\nğŸŒ Asia: Maintenance (ETA: 2h)");
    }

    function openDiscord() {
      alert("Opening Discord community... ğŸ’¬");
      // window.open("https://discord.gg/rust", "_blank");
    }

    function openTwitter() {
      alert("Opening Twitter updates... ğŸ¦");
      // window.open("https://twitter.com/playrust", "_blank");
    }

    function openReddit() {
      alert("Opening Reddit community... ğŸ“±");
      // window.open("https://reddit.com/r/playrust", "_blank");
    }

    // Auto-show countdown on page load
    document.addEventListener('DOMContentLoaded', function() {
      setTimeout(showCountdown, 1000);
    });
